<p id="notice"><%= notice %></p>

<h1>Listing Fuels</h1>

<table>
  <thead>
    <tr>
      <th>Calorie</th>
      <th>Date</th>
      <th>Food</th>
      <th>Meal type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fuels.each do |fuel| %>
      <tr>
        <td><%= fuel.calorie %></td>
        <td><%= fuel.date %></td>
        <td><%= fuel.food %></td>
        <td><%= fuel.meal_type %></td>
        <td><%= link_to 'Show', fuel %></td>
        <td><%= link_to 'Edit', edit_fuel_path(fuel) %></td>
        <td><%= link_to 'Destroy', fuel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

